<h1>Sign In</h1>

<%= form_tag signin_path do %>
  <div class="field">
    <%= label_tag :name %><br />
    <%= text_field_tag "user[name]"%>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag "user[password]" %>
  </div>
  <div class="actions"><%= submit_tag "Sign In" %></div>
<% end %>
