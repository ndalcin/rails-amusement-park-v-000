<h1><%= @attraction.name %></h1>
<h2>Tickets: <%= @attraction.tickets %></h2>
<h2>Nausea Rating: <%= @attraction.nausea_rating %></h2>
<h2>Happiness Rating: <%= @attraction.happiness_rating %></h2>
<h2>Minimum Height: <%= @attraction.min_height %> inches</h2>
<br>
<br>
<% if admin? %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% else %>
  <%= form_for Ride.new, url: take_ride_path do |f| %>
    <%= f.hidden_field :attraction_id, value: @attraction.id %>
    <%= f.submit value: "Go on this ride"%>
  <% end %>
<% end %>
