<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label "Height (in inches)" %><br />
    <%= f.text_field :height %>
  </div>
  <div class="field">
    <%= f.label "How happy are you? (1-5)" %><br />
    <%= f.text_field :happiness %>
  </div>
  <div class="field">
    <%= f.label "How nauseous are you? (1-5)" %><br />
    <%= f.text_field :nausea %>
  </div>
  <div class="field">
    <%= f.label "How many tickets do you have?" %><br />
    <%= f.text_field :tickets %>
  </div>
  <div class="field">
    <%= f.label "Are you an administrator?" %>
    <%= f.check_box :admin %><br />
  </div>


  <div class="actions"><%= f.submit %></div>
<% end %>
